<h1><%= @user.name %></h1>

<h3><%= "List of Events:" %></h3>
<% if @user.created_events.empty? %>
  <p><%= @user.name %> have not created any event.</p>
<% else %>
  <ul>
    <% @user.created_events.each do |event| %>
      <li>
        <%= link_to event.name, event_path(event) %>
      </li>
    <% end %>
  </ul>
<% end %>

<p><%= link_to "Create Event", new_event_path %></p>