<h1>SIGN IN</h1>

<%= form_with url: sessions_path, local: true do |f| %>
  <div class="field">
    <div class="control">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "input", autofocus: true %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit "Log in", class: "button is-primary is-large is-fullwidth" %>
    </div>
  </div>

  <div>
    <p><%= "No account yet? " %><%= link_to "Sign Up Here", signup_path %></p>
  </div>
<% end %>